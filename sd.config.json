{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "scss",
      "files": [{
        "destination": "assets/scss/05-tokens/tokens.scss",
        "format": "css/variables",
        "options": {
          "outputReferences": true
        }
      }]
    },
    "scss": {
      "transformGroup": "scss",
      "files": [{
        "destination": "assets/scss/05-tokens/spaces.scss",
        "format": "scss/map-flat",
        "mapName": "tokens"
      }]
    },
    "json": {
      "transformGroup": "web",
      "files": [{
        "destination": "public/tokens.json",
        "format": "json/nested",
        "mapName": "tokens"
      }]
    }
  }
}
